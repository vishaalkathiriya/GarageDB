<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery.cookie")
    @Scripts.Render("~/bundles/kendo")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GarageDB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    <li>@Html.ActionLink("Add customer", "Add", "Customers")</li>
                    <li>@Html.ActionLink("Diary", "Index", "Appointments")</li>
                    @*<li>@Html.ActionLink("Reminders", "Index", "Reminders")</li>*@
                    <li>@Html.ActionLink("Setup", "Edit", "Garages")</li>
                    <li>@Html.ActionLink("Help", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{if (ViewBag.Message != null)
            {
                <br /><div class="alert alert-info">&nbsp;@ViewBag.Message</div>
            }
            else if (TempData["Message"] != null)
            {
                <br /><div class="alert alert-info">&nbsp;@TempData["Message"]</div>
            }
        }
        @RenderBody()
        <hr />
        <footer>
            <p>GarageDB &copy; @DateTime.Now.Year Click Software Limited version 0.8.5</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
